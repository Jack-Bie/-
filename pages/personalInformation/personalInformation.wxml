<!--pages/personalInformation/personalInformation.wxml-->
<view class="title">
  编辑个人资料
</view>
<view class="avatar_" bindtap="clickme">
  <view class="tx">
    头像
  </view>
  <view>
    <image src="{{avatar}}" mode="" class="avatar" />
  </view>
</view>
<view>
  <view class="choose-box">
    <view class="zt">
      昵称
    </view>
<view class="zt">{{name}}</view>
  </view>
  <view class="choose-box">
  <view class="zt">
      年级
  </view>
  <picker class="zt" bindchange="chooseGrade" range="{{grades}}">
    {{grade_label}}
  </picker>
  </view>
  <view class="choose-box">
    <view class="zt">
      学院-专业 
      </view>
    <picker class="zt" bindchange="chooseMajor" range="{{faculty_major}}">
      {{major_label}}
    </picker>
  </view>
</view>
<!--屏幕背景变暗的背景  -->
  <view class="commodity_screen" bindtap="hideModal" wx:if="{{showModalStatus}}"></view>
  <!--弹出框  -->
  <view animation="{{animationData}}" class="commodity_attr_box" wx:if="{{showModalStatus}}">
  <image src="/img/png/组件名=拍照,active=是.png" class="img"></image>
  <image src="/img/png/组件名=图片,active=是.png" class="img"></image>
  </view>
