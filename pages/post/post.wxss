page{
  background: -webkit-linear-gradient(top,rgb(255, 255, 255),#ffffff,rgb(230, 195, 235));
}

.post-box{
  width: 100%;
  height: 700rpx;
  margin-bottom: 60rpx;
}

.text{
  margin-left: 40rpx;
  width: 90%;
  height: 70%;
  padding: 20rpx;
  border: 1px solid transparent;
  overflow-y: scroll;
}

.img-box{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap

}
.img{
  width: 100px;
  height: 100px;
 
  position: relative;
}
.img image{
  width: 100%;
  height: 100%;
}
.delete-btn{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 30px;
  font-size: 12px;
  color: #fff;
  background: rgba(0,0,0,.5);
  text-align: center;
  line-height: 30px;
}
.upload-img-btn{
  margin-left: 40rpx;
  width: 100px;
  height: 100px;
  text-align: center;
  line-height: 80px;
  border: 1px solid #ccc;
  font-size: 200rpx;
  font-weight: 100;
  color:grey;
  margin-bottom: 40rpx;
}

.choose-box{
  display: flex;
  justify-content: space-around;
  border:2rpx solid;
  border-color: rgb(182, 123, 169);
  border-radius: 10rpx;
  height: 100rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-top:10rpx
}
.zt{
  display: flex;
  flex-direction: column;
  justify-content: center;
  width:200rpx;
  text-align: center;
}