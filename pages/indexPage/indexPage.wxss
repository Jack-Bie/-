/* pages/indexPage/indexPage.wxss */
page{
  background: -webkit-linear-gradient(top,rgb(255, 255, 255),#ffffff,rgb(230, 195, 235));
}

.personalInformation{
  border:4rpx solid;
  border-color: grey;
  border-radius: 20rpx;
  display: flex;
flex-direction: row;
padding: 10rpx;
margin: 30rpx;

}
.name{
  font-size: 60rpx;
  margin: 30rpx;
}
.avatar{
  width: 100rpx;
  height:100rpx;
  display: block;
  margin: 10rpx;
  border-radius: 100rpx;
}
.text{
  flex-direction: row;
  justify-content:space-between;
}

.box{
  border:4rpx solid;
  border-color: purple;
  border-radius: 20rpx;
  margin: 30rpx;
display: flex;
margin: 20rpx;
}
.box_text{
  font-size: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
